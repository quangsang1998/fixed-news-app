<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools">

  <data>

    <variable
      name="model"
      type="com.duonghb.testbitrise.domain.model.NewsModel" />
  </data>

  <androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <ImageView
      android:id="@+id/newsImageView"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="@dimen/mergin_start"
      android:paddingBottom="@dimen/image_height"
      android:contentDescription="@string/content_image"
      android:scaleType="fitXY"
      android:src="@drawable/ic_launcher_background"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
      android:id="@+id/linearLayout"
       android:layout_width="@dimen/size_width_height"
       android:layout_height="match_parent"
       android:layout_marginStart="@dimen/mergin_start"
       android:layout_marginEnd="@dimen/megin_end"
       android:orientation="vertical"
       app:layout_constraintStart_toEndOf="@id/newsImageView"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintTop_toTopOf="parent"
       app:layout_constraintBottom_toBottomOf="parent">

       <TextView
          android:id="@+id/titleTextView"
          android:text="@{model.title}"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
         android:layout_marginEnd="@dimen/megin_end"
          android:gravity="center" />

       <TextView
          android:id="@+id/descriptionTextView"
          android:text="@{model.description}"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
         android:layout_marginEnd="@dimen/megin_end"/>

    </LinearLayout>
  </androidx.constraintlayout.widget.ConstraintLayout>
</layout>

